import os 
import datetime

ano_atual = datetime.datetime.now().year

os.system('cls')


a = int(input('Escolha um número inteiro: '))
b = int(input('Escolha outro número inteiro: '))
c = int(input('Escolha mais um número inteiro: '))
nome = str(input('Insira seu nome: '))
nome1 = 'Guilherme'
nascimento = int(input('Coloque seu ano de nascimento: '))
idade = ano_atual - nascimento
idade1 = 18
resposta1 = ''
resposta2 = ''
resposta3 = ''

if a >= b + c:
    resposta1 = f'O número {a} é maior ou igual a {b + c}'
elif a <= b + c:
    resposta1 = f'O número {a} é menor ou igual a {b + c}'
else:
    resposta1 = f'O número {a} é menor que {b + c}'

if nome == nome1:
    resposta2 = (f'Olá {nome} seja bem-vindo!!')
else:
    resposta2 = (f'Usuário incorreto: {nome} não está logado!')

if idade > idade1:
    resposta3 = (f'Você é maior de idade!')
else:
    resposta3 = (f'Você é menor de idade!')

# saída
print(f'{resposta1}\n {resposta2}\n {resposta3}')