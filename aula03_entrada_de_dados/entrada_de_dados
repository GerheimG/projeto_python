# saída de dados

print('~' * 70)
print('Saída de Dados')
print('~' * 70)
print('Nome..........: ', nome)
print('Data de Nascimento: ', nascimento)
print('Peso...........: ', peso)
print('Altura.........: ', altura)
print('~' * 70)
