# importando biblioteca 
import os

# limpando terminal
os.system('cls')

print('='*70)
print('Estudo da Condicional: 1° Parte:')
print('='*70)

# Entrada
numero = float(input('Digite um número: '))
resposta = ''

# Condicional 

if numero % 2 == 0:
    resposta = f'O número {numero} é par'
else:
    resposta = f'O número {numero} é ímpar'

# Saída
print('=')
print(resposta)
print('Fim do programa!\n')  #\n salta uma linha